{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "node application with typescript",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && npx tsc",
    "copy-env": "copyfiles ./production.env ./dist",
    "prod": "SET NODE_ENV=production && npm run build && npm run copy-env && node dist/index.js",
    "stage": "cross-env NODE_ENV=staging npm run build && npm run copy-env && node dist/index.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npx tsc --watch\" \"nodemon -q src/index.ts\"",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "author": "Kanishk",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "source-map-support": "^0.5.21",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/morgan": "^1.9.3",
    "body-parser": "^1.20.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "winston": "^3.8.2"
  }
}
